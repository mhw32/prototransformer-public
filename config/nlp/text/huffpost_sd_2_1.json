{
    "exp_base": "./config/nlp/text/exp_dir/<DATE>",
    "exp_name": "huffpost_sd_2_1",
    "agent": "NLPPrototypeNetAgent",
    "cuda": true,
    "gpu_device": 8,
    "seed": 42,
    "data_loader_workers": 4,
    "dataset": {
        "name": "fs_huffpost",
        "data_root": "config/nlp/text/data_root/data/huffpost.json",
        "train": {
            "n_ways": 5,
            "n_shots": 15,
            "n_queries": 3,
            "smlmt_tasks_factor": 0,
            "shot_mode": "step_decay",
            "decay_every": 100,
            "decay_by": 3
        },
        "test": {
            "n_ways": 5,
            "n_shots": 3,
            "n_queries": 3
        }
    },
    "optim": {
        "batch_size": 1,
        "learning_rate": 1e-4,
        "weight_decay": 0,
        "patience": 1000,
        "num_epochs": 200,
        "warmup_steps": 10000,
        "use_scheduler": true
    },
    "model": {
        "name": "roberta",
        "config": "roberta-base",
        "d_model": 768,
        "task_tam": false,
        "finetune": true,
        "finetune_layers": 3
    },
    "validate": true,
    "validate_freq": 1,
    "copy_checkpoint_freq": 10,
    "continue_exp_dir": null,
    "continue_exp_name": null
}
